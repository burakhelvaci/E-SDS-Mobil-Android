<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esds.app.LoginActivity"
    android:background="@drawable/login_bg"
    android:padding="30dp">

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="E-SDS"
        android:textStyle="bold|italic"
        android:textSize="50dp"
        android:textColor="#fafafa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:text="Elektronik Satış Destek Sistemi"
        android:textStyle="bold|italic"
        android:textColor="#efefef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_name_in_login"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="15dp"
        android:hint="Kullanıcı Adı..."
        android:textColor="#122D48"
        android:background="@drawable/ed_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/password_in_login"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="15dp"
        android:inputType="textPassword"
        android:hint="Parola..."
        android:textColor="#122D48"
        android:background="@drawable/ed_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:singleLine="true" />

    <Button
        android:onClick="doLogin"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="75dp"
        android:text="Giriş Yap"
        android:textColor="#fafafa"
        android:backgroundTint="#1b76c4" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Parolamı Unuttum"
        android:textColor="#fafafa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
